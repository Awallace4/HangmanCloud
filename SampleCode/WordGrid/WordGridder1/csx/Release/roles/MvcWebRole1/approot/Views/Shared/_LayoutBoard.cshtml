<!DOCTYPE html>

<!-- Shows the WordGrid game board, tile rack, and stats.-->

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- <div id="status"></div> -->
    <table>
        <tr>
            <td>
                <div id ="board">
                    @RenderBody()
                </div>
            </td>
            <td>
                <div id="gameList">@RenderSection("info")</div>
            </td>
        </tr>
    </table>
    <div id="rack">@RenderSection("rack")</div>

</body>
</html>
